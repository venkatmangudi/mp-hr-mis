<%- model_class = MartialStat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped" id="martial_stats">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:martial_status_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @martial_stats.each do |martial_stat| %>
      <tr>
        <td><%= link_to martial_stat.id, martial_stat_path(martial_stat) %></td>
        <td><%= martial_stat.martial_status_type %></td>
        <td><%=l martial_stat.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_martial_stat_path(martial_stat), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      martial_stat_path(martial_stat),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_martial_stat_path,
            :class => 'btn btn-primary' %>
<script>
    $(document).ready(function() {
      $('#martial_stats').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>