<%- model_class = Promotion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @promotion.employee.emp_full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_payscale) %>:</strong></dt>
  <dd><%= @promotion.current_payscale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation_id) %>:</strong></dt>
  <dd><%= @promotion.designation.Designation_English %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation_id) %>:</strong></dt>
  <dd><%= @promotion.designation.Designation_Hindi%></dd>
  <dt><strong><%= model_class.human_attribute_name(:new_payscale) %>:</strong></dt>
  <dd><%= @promotion.new_payscale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_no) %>:</strong></dt>
  <dd><%= @promotion.order_no %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employee_path(@promotion.employee_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_promotion_path(@promotion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              promotion_path(@promotion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
