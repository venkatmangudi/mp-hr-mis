<%- model_class = State -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<script src="/app/assets/javascripts/jquery.dataTables.columnFilter.js" type="text/javascript"></script>
<table class="table table-bordered" id="states">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:state_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= link_to state.id, state_path(state) %></td>
        <td><%= state.state_name %></td>
        <td><%=l state.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_state_path(state), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      state_path(state),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_state_path,
            :class => 'btn' %>

<script>
    $(document).ready(function() {
      $('#states').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>