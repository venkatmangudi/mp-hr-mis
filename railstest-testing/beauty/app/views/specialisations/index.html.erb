<%- model_class = Specialisation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-bordered" id="specialisations">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Specialisation_name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @specialisations.each do |specialisation| %>
      <tr>
        <td><%= link_to specialisation.id, specialisation_path(specialisation) %></td>
        <td><%= specialisation.Specialisation_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_specialisation_path(specialisation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      specialisation_path(specialisation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_specialisation_path,
            :class => 'btn' %>
<script>
    $(document).ready(function() {
      $('#specialisations').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>