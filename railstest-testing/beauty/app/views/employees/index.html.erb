

<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-bordered" id="employe">
  <thead>
    <tr>
      <th>Employee ID</th>

      <th>Employee Full Name</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.emp_id %></td>

        <td><%= link_to employee.emp_full_name,employee_path(employee) %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn' %>
          



    <div class="row">
        <div class="span9">
          <div id="graph" style="height: 250px;"></div>
          
        </div>
        <div class="span3">
          <%= content_tag :div, "", id: "genders_chart", data: {employees: @employees } %>      
        </div>
    </div>

<script>
    $(document).ready(function() {
      $('#employe').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>

   <script >
  Morris.Bar({
  element: 'graph',
  data: [
    {x: 'Pharmacist', y: 26},
    {x: 'Cardiothorasic', y: 14},
    {x: 'Neurosurgeon', y: 69},
    {x: 'Endocarditist', y: 23},
    {x: 'Aenesthician', y: 25},
    {x: 'Radiologist', y: 52},
  ],
  xkey: 'x',
  ykeys: ['y'],
  labels: ['Y'],
  barColors: function (row, series, type) {
    if (type === 'bar') {
      var red = Math.ceil(255 * row.y / this.ymax);
      return 'rgb(' + red + ',0,0)';
    }
    else {
      return '#000';
    }
  }
});

  </script>