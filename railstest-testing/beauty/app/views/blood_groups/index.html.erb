<%- model_class = BloodGroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-bordered" id="blood_groups">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:blood_group_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @blood_groups.each do |blood_group| %>
      <tr>
        <td><%= link_to blood_group.id, blood_group_path(blood_group) %></td>
        <td><%= blood_group.blood_group_type %></td>
        <td><%=l blood_group.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_blood_group_path(blood_group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      blood_group_path(blood_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_blood_group_path,
            :class => 'btn btn-primary' %>
<script>
    $(document).ready(function() {
      $('#blood_groups').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>