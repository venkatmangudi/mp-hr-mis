<div class="page-header">
  <h1>Listing people</h1>
</div>
<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.title %></td>
    <td><%= person.body %></td>
    <td><%= link_to 'Show', person, :class => "btn btn-success" %></td>
    <td><%= link_to 'Edit', edit_person_path(person), :class => "btn btn-warning" %></td>
    <td><%= link_to 'Destroy', person, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

