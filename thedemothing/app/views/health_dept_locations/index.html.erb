<%- model_class = HealthDeptLocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Hospital_Name) %></th>
      <th><%= model_class.human_attribute_name(:division_id) %></th>
      <th><%= model_class.human_attribute_name(:district_id) %></th>
      <th><%= model_class.human_attribute_name(:block_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>

<!--  <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:division_id) %></th>
      <th><%= model_class.human_attribute_name(:district_id) %></th>
      <th><%= model_class.human_attribute_name(:block_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:admin_location) %></th>
      <th><%= model_class.human_attribute_name(:district_code) %></th>
      <th><%= model_class.human_attribute_name(:istribal) %></th> -->
      <th><%= model_class.human_attribute_name(:no_of_beds) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @health_dept_locations.each do |health_dept_location| %>
      <tr>
        <td><%= health_dept_location.institution_master.Institution_Name %></td>
        <td><%= health_dept_location.division.division_name %></td>
        <td><%= health_dept_location.district.district_name %></td>
        <td><%= health_dept_location.block.block_name %></td>
        <td><%= health_dept_location.location.location_name %></td>
    <!--    <td><%= health_dept_location.admin_location %></td>
        <td><%= health_dept_location.district_code %></td>
        <td><%= health_dept_location.istribal %></td> -->
        <td><%= health_dept_location.no_of_beds %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_health_dept_location_path(health_dept_location), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      health_dept_location_path(health_dept_location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_health_dept_location_path,
            :class => 'btn btn-primary' %>
