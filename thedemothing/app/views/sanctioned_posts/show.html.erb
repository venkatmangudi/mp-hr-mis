<%- model_class = SanctionedPost -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:health_dept_locationID) %>:</strong></dt>
  <dd><%= @sanctioned_post.health_dept_locationID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation_name) %>:</strong></dt>
  <dd><%= @sanctioned_post.designation.Designation_English %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Sanctoned_Posts) %>:</strong></dt>
  <dd><%= @sanctioned_post.sac_post %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sanctioned_posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sanctioned_post_path(@sanctioned_post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sanctioned_post_path(@sanctioned_post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
