<%- model_class = EmpAdd -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-bordered" id="empadds">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:emp_id) %></th>
      <th><%= model_class.human_attribute_name(:emp_martial_status_id) %></th>
      <th><%= model_class.human_attribute_name(:emp_present_addr) %></th>
      <th><%= model_class.human_attribute_name(:emp_identification) %></th>
      <th><%= model_class.human_attribute_name(:emp_pannum) %></th>
      <th><%= model_class.human_attribute_name(:emp_dlnum) %></th>
      <th><%= model_class.human_attribute_name(:emp_passportnum) %></th>
      <th><%= model_class.human_attribute_name(:emp_alt_email) %></th>
      <th><%= model_class.human_attribute_name(:emp_alt_phone) %></th>
      <th><%= model_class.human_attribute_name(:emp_alt_mobile) %></th>
      <th><%= model_class.human_attribute_name(:emp_present_loc_master_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @emp_adds.each do |emp_add| %>
      <tr>
        <td><%= link_to emp_add.id, emp_add_path(emp_add) %></td>
        <td><%= emp_add.emp_id %></td>
        <td><%= emp_add.emp_martial_status_id %></td>
        <td><%= emp_add.emp_present_addr %></td>
        <td><%= emp_add.emp_identification %></td>
        <td><%= emp_add.emp_pannum %></td>
        <td><%= emp_add.emp_dlnum %></td>
        <td><%= emp_add.emp_passportnum %></td>
        <td><%= emp_add.emp_alt_email %></td>
        <td><%= emp_add.emp_alt_phone %></td>
        <td><%= emp_add.emp_alt_mobile %></td>
        <td><%= emp_add.emp_present_loc_master_id %></td>
        <td><%=l emp_add.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_emp_add_path(emp_add), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      emp_add_path(emp_add),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_emp_add_path,
            :class => 'btn btn-primary' %>

<script>
    $(document).ready(function() {
      $('#empadds').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>
