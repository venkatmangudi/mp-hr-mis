<%= simple_form_for @emp_add, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :emp_id %>
  <%= f.input :emp_martial_status_id %>
  <%= f.input :emp_present_addr %>
  <%= f.input :emp_identification %>
  <%= f.input :emp_pannum %>
  <%= f.input :emp_dlnum %>
  <%= f.input :emp_passportnum %>
  <%= f.input :emp_alt_email %>
  <%= f.input :emp_alt_phone %>
  <%= f.input :emp_alt_mobile %>
  <%= f.input :emp_present_loc_master_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                emp_adds_path, :class => 'btn' %>
  </div>
<% end %>
