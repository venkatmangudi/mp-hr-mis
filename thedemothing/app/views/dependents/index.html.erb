<%- model_class = Dependent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-bordered" id="dependents">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:employee_id) %></th>
      <th><%= model_class.human_attribute_name(:Dependent_name) %></th>
      <th><%= model_class.human_attribute_name(:relation_id) %></th>
      <th><%= model_class.human_attribute_name(:Birthdate) %></th>
      <th><%= model_class.human_attribute_name(:status_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dependents.each do |dependent| %>
      <tr>
        <td><%= link_to dependent.id, dependent_path(dependent) %></td>
        <td><%= dependent.employee.emp_full_name %></td>
        <td><%= dependent.Dependent_name %></td>
        <td><%= dependent.relation.Relation_name %></td>
        <td><%= dependent.Birthdate %></td>
        <td><%= dependent.status.Status_name %></td>
        <td><%= dependent.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dependent_path(dependent), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dependent_path(dependent),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dependent_path,
            :class => 'btn' %>
<script>
    $(document).ready(function() {
      $('#dependents').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>
