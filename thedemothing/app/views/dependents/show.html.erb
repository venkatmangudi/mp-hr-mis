<%- model_class = Dependent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @dependent.employee.emp_full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Dependent_name) %>:</strong></dt>
  <dd><%= @dependent.Dependent_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relation_id) %>:</strong></dt>
  <dd><%= @dependent.relation.Relation_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Birthdate) %>:</strong></dt>
  <dd><%= @dependent.Birthdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @dependent.status.Status_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employee_path(@dependent.employee_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dependent_path(@dependent), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dependent_path(@dependent),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
