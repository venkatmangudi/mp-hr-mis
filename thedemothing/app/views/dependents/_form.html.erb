<%= simple_form_for @dependent, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :employee,label_method: :emp_full_name, value_method: :id, include_blank: false, :as => :hidden %>
    <%= f.association :employee,label_method: :emp_full_name, value_method: :id, include_blank: false, disabled: true %>
  <%= f.input :Dependent_name %>
      <%= f.association :relation,label_method: :Relation_name, value_method: :id, include_blank: false %>
  <%= f.input :Birthdate ,as: :string%>
      <%= f.association :status,label_method: :Status_name, value_method: :id, include_blank: false %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employee_path(@dependent.employee_id), :class => 'btn' %>
  </div>
<% end %>
