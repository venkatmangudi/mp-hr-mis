<%- model_class = Designation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Designation_Hindi) %>:</strong></dt>
  <dd><%= @designation.Designation_Hindi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Designation_English) %>:</strong></dt>
  <dd><%= @designation.Designation_English %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_no) %>:</strong></dt>
  <dd><%= @designation.class_no %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              designations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_designation_path(@designation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              designation_path(@designation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
