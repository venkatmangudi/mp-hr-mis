<%- model_class = LeaveType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped" id="leave_type">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:leave_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leave_types.each do |leave_type| %>
      <tr>
        <td><%= link_to leave_type.id, leave_type_path(leave_type) %></td>
        <td><%= leave_type.leave_type %></td>
        <td><%=l leave_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_leave_type_path(leave_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      leave_type_path(leave_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_leave_type_path,
            :class => 'btn' %>
<script>
    $(document).ready(function() {
      $('#leave_type').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>