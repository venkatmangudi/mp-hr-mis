<%- model_class = QualificationType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-bordered" id="qualification_types">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Qualification_type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @qualification_types.each do |qualification_type| %>
      <tr>
        <td><%= link_to qualification_type.id, qualification_type_path(qualification_type) %></td>
        <td><%= qualification_type.Qualification_type %></td>
        <td><%= qualification_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_qualification_type_path(qualification_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      qualification_type_path(qualification_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_qualification_type_path,
            :class => 'btn' %>
<script>
    $(document).ready(function() {
      $('#qualification_types').dataTable( {
        "sPaginationType": "bootstrap"
      } );
    }
  );
</script>
