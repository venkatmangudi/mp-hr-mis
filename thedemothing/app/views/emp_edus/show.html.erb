<%- model_class = EmpEdu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:emp_id) %>:</strong></dt>
  <dd><%= @emp_edu.emp_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emp_education) %>:</strong></dt>
  <dd><%= @emp_edu.emp_education %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emp_specialisation) %>:</strong></dt>
  <dd><%= @emp_edu.emp_specialisation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emp_remarks) %>:</strong></dt>
  <dd><%= @emp_edu.emp_remarks %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emp_edus_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_emp_edu_path(@emp_edu), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              emp_edu_path(@emp_edu),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
