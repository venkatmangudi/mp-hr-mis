<%= simple_form_for @specialisation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :Specialisation_name %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                specialisations_path, :class => 'btn' %>
  </div>
<% end %>
