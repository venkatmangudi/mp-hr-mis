<%- model_class = InstitutionMaster -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pincode_id) %>:</strong></dt>
  <dd><%= @institution_master.pincode.pincode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Institution_Name) %>:</strong></dt>
  <dd><%= best_in_place @institution_master, :Institution_Name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Institution_type_id) %>:</strong></dt>
  <dd><%= @institution_master.Institution_type.Institution_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Special_Cadre_id) %>:</strong></dt>
  <dd><%= @institution_master.Special_Cadre.Special_Cadre_Type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district_id) %>:</strong></dt>
  <dd><%= @institution_master.district.district_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Beds) %>:</strong></dt>
  <dd><%= @institution_master.Beds %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              institution_masters_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_institution_master_path(@institution_master), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              institution_master_path(@institution_master),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<script>
$('.best_in_place').bind("ajax:success", function(){$(this).closest('tr').effect('highlight'));});
</script>